<% provide(:title, "Danh sách khóa học") %>
<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
        <!--<h3 class="box-title">Danh sách khóa học</h3>-->
        <div class="box-tools">
          <%= render :partial => "layouts/filter_header", :locals => {:in_course => false }%>
        </div>
      </div><!-- /.box-header -->
      <div class="box-body table-responsive no-padding">
        <%= render :partial => "courses" %>
      </div><!-- /.box-body -->
        <div class="box-footer clearfix">
          <div class="row">
            <div class="col-xs-4">
              <div class="dataTables_info" id="courses_info"><%= page_entries_info @courses, :entry_name => 'Khóa học' %></div>
            </div>
            <div class="col-xs-8">
              <div class="dataTables_paginate paging_bootstrap text-right">
                <div id="paginator">
                  <%= paginate @courses, :remote => true %>
                </div>
              </div>
            </div>
          </div>
          <br />
          <% if @current_user.type == "Teacher" %>
           <%= link_to 'Thêm khóa học', new_course_path %>
          <% end %>
        </div>
      </div>
    </div><!-- /.box -->
  </div>
</div>

