<% provide(:title, 'Học viên trong lớp') %>

<% if current_user.type == "Teacher" %>
    <div class="row">
      <section class="col-lg-12 connectedSortable ui-sortable">
        <div class="box box-primary" id="add-user">
          <div class="box-header" style="cursor: move;">
            <!-- tools box -->
            <div class="pull-right box-tools">
              <button class="btn btn-primary btn-sm refresh-btn" data-toggle="tooltip" title="" data-original-title="Reload"><i class="fa fa-refresh"></i></button>
              <button class="btn btn-primary btn-sm" data-widget="collapse" data-toggle="tooltip" title="" data-original-title="Collapse"><i class="fa fa-minus"></i></button>
              <button class="btn btn-primary btn-sm" data-widget="remove" data-toggle="tooltip" title="" data-original-title="Remove"><i class="fa fa-times"></i></button>
            </div><!-- /. tools -->
            <i class="fa fa-cloud"></i>

            <h3 class="box-title">Thêm học viên bằng email</h3>

          </div><!-- /.box-header -->

          <form role="form" action="<%= course_student_path(@course) %>" method="get" >
            <div class="box-body">
              <div class="form-group">
                <label>Nhập danh sách email học viên (cách bằng dấu , ), học viên sẽ được tạo tài khoản tự động và gửi thông tin về hòm thư</label>
                <textarea class="form-control" rows="3" name="student_emails" placeholder="email1@mail.com, email2@mail.com ..."></textarea>
              </div>
            </div>
            <div class="box-footer">
              <button type="submit" class="btn btn-primary">Thêm</button>
            </div>
          </form>
        </div>
      </section>
    </div>
<% end %>
<div class="row">
  <section class="col-lg-12 connectedSortable ui-sortable">
    <div class="box box-primary" id="add-user">
      <div class="box-header" style="cursor: move;">
        <!-- tools box -->
        <div class="pull-right box-tools">
          <button class="btn btn-primary btn-sm refresh-btn" data-toggle="tooltip" title="" data-original-title="Reload"><i class="fa fa-refresh"></i></button>
          <button class="btn btn-primary btn-sm" data-widget="collapse" data-toggle="tooltip" title="" data-original-title="Collapse"><i class="fa fa-minus"></i></button>
          <button class="btn btn-primary btn-sm" data-widget="remove" data-toggle="tooltip" title="" data-original-title="Remove"><i class="fa fa-times"></i></button>
        </div><!-- /. tools -->
        <i class="fa fa-cloud"></i>

        <%= render :partial => "courses/users/total_users", :locals => {:course => @course } %>

      </div><!-- /.box-header -->
      <div class="box-body table-responsive">


        <br />
        <div class="dataTables_wrapper form-inline" role="grid">
          <%= render :partial => "layouts/filter_header", :locals => {:in_course => true }%>
          <%= render :partial => "courses/users/users", :locals => {:course => @course }%>
          <div class="row">
            <div class="col-xs-4">
              <div class="dataTables_info" id="users_info"><%= page_entries_info @users, :entry_name => opposite_type %></div>
            </div>
            <div class="col-xs-8">
              <div class="dataTables_paginate paging_bootstrap text-right">
                <div id="paginator">
                  <%= paginate @users, :remote => true %>
                </div>
              </div>
            </div>
          </div>
        </div>

        <%= link_to 'Quay lại', courses_path %>

      </div>
    </div>
  </section>
</div>
