<!-- Left side column. contains the logo and sidebar -->
<aside class='left-side sidebar-offcanvas'>
  <!-- sidebar: style can be found in sidebar.less -->
  <section class='sidebar'>
    <!-- Sidebar user panel -->
    <div class='user-panel'>
      <div class='pull-left image'>
        <% if current_user.avatar? %>
          <img alt='User Image' class='img-circle' src='<%= current_user.avatar.url %>'>
        <% else %>
          <img alt='User Image' class='img-circle' src='<%= asset_path "default-avatar-min.png" %>'>
        <% end %>
      </div>
      <div class='pull-left info'>
        <p>
          <a href='#'>
            <i class='fa fa-circle text-success'></i>
            Online
          </a>
      </div>
    </div>
    <!-- search form -->
    <form action='#' class='sidebar-form' method='get'>
      <div class='input-group'>
        <input class='form-control' name='q' placeholder='Search...' type='text'>
              <span class='input-group-btn'>
                <button class='btn btn-flat' id='search-btn' name='seach' type='submit'>
                  <i class='fa fa-search'></i>
                </button>
              </span>
      </div>
    </form>
    <!-- /.search form -->
    <!-- sidebar menu: : style can be found in sidebar.less -->
    <ul class='sidebar-menu'>
      <li>
        <a href='<%= teaches_path %>'>
          <i class='fa fa-group'></i>
          <span>Danh sách <%= opposite_type %></span>
        </a>
      </li>
      <li>
        <a href='<%= courses_path %>'>
          <i class='fa fa-star'></i>
          <span>Danh sách khóa học</span>
        </a>
      </li>
      <li>
        <a href='<%= current_user.type == "Teacher" ? tests_path : do_tests_path  %>'>
          <i class='fa fa-file-text'></i>
          <span>Danh sách bài kiểm tra</span>
        </a>
      </li>
    </ul>
  </section>
</aside>
<!-- /.sidebar -->